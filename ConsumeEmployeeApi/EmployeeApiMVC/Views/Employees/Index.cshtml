@model IEnumerable<EmployeeApiMVC.DTO.EmployeeDto>
<div class=" container">
   <div class="row">
      <div class="col-md-10 offset-1">
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center bg-secondary text-light">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Salary</th>
                        <th>City</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Salary</td>
                            <td>@item.city</td>
                        </tr>
                    }
                </tbody>
            </table>
      </div>
   </div>
</div>